<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="background-color:#670BFF;">
  <div class="container-fluid">
    <div class="d-flex align-items-center">

      <%= link_to "#", class: "navbar-brand" do %>
        <%= image_tag "pitch_logo.png" %>
      <% end %>
      <%= link_to "PITCH PERFECT", "#", class: "nav-link text-white" %>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item active">
          <%= link_to pitches_path, class: "nav-link text-white" do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Generate Pitch", new_pitch_path, class: "nav-link text-white" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="avatar text-black" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ4YreOWfDX3kK-QLAbAL4ufCPc84ol2MA8Xg&s", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Profile", edit_user_registration_path, class: "dropdown-item text-black" %>
              <%= link_to "My Pitches", pitches_path, class: "dropdown-item text-black" %>
              <%= link_to "My Favourites", favourites_path, class: "dropdown-item text-black" %>
              <%= link_to "About Us", "#", class: "dropdown-item text-black" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-black" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
          </li>
          <li class="nav-item">
            <%= link_to "Register", new_user_registration_path, class: "nav-link text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
