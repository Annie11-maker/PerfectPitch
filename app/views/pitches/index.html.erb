<div class="container mt-5">
  <div class="text-center">
    <h1 class="display-4">Pitches</h1>
  </div>

  <div class="row mt-5">
    <% @pitches.each do |pitch| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm h-100" style="background-color: #d3d3d3;">
          <img src="path/to/placeholder-image1.png" alt="Placeholder Image" class="card-img-top">

          <div class="card-body d-flex flex-column justify-content-between" style="height: 200px;">
            <div class="card-content">
              <h5 class="card-title"><%= pitch.name %></h5>
              <p class="card-text" style="font-size: 0.875rem;"><%= truncate(pitch.description, length: 100) %></p>
            </div>
            <a href="<%= pitch_path(pitch) %>" class="btn btn-outline-primary">View Pitch</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
